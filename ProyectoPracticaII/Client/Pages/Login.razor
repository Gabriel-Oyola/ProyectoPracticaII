@page "/login"



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
    @*<link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" />*@

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="css/Login.css" rel="stylesheet" />
    @*<link href="MOTORED2.Client.styles.css" rel="stylesheet" />*@
    @* <link href="Views/Inicio/Registrarse.css" rel="stylesheet" />*@
    <style>

        body {
            margin: 0;
            padding: 0;
            background-color: #404040;
            height: 100vh;
            color: white;
        }

    </style>

</head>


<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Motored</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" asp-controller="Inicio" asp-action="IniciarSesion" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Correo</label><br>
                                <input type="text" required name="correo" id="correo" class="form-control" placeholder="Correo">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Contraseña</label><br>
                                <input type="password" required name="clave" id="clave" class="form-control" placeholder="Contraseña">
                            </div>

                            @* @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger" role="alert">

                                    @ViewData["Mensaje"]
                                </div>
                                
                            } *@
                            <div class="boton-2">
                                <label for="remember-me" class="text-info"><span>Recordar usuario</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                <input type="submit" name="submit" class="btn-2" value="Iniciar sesion">
                            </div>
                            <div id="register-link" class="text-right">
                                <a href="/registro" class="text-info">Registrarse</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />

    <br />
    <br />
    <br />

    <footer>
        <p> Motored &copy;. Todos los derechos reservados</p>
    </footer>
</body>


</html>


